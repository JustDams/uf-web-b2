{% extends 'base.html.twig' %}

{% block title %}Edit comment
	{{comment.id}}
{% endblock %}

{% block stylesheets %}
	<link href="{{asset('/css/form.css')}}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center form-container align-items-center">
		<div class="border shadow p-3 rounded navbar-bg col-md-4">
			{{ form_start(commentForm) }}
			<div class="form-group">
				{{ form_start(commentForm) }}
				{{ form_label(searchform.title, 'Title', {
							'label_attr' : {
								'class' : 'my-2'
							}
						}) 
					}}
				{{ form_widget(commentForm.title, {
							'attr': {
								'class' : 'form-control',
								'placeholder' : 'Title'
							}
						}) 
					}}
				{{ form_label(commentForm.content, 'Message',{
							'label_attr' : {
								'class' : 'my-2'
							}
						}) 
					}}
				{{ form_widget(commentForm.content, {
								'attr': {
									'class' : 'form-control',
									'placeholder' : 'Comment'
								}
							}) 
						}}
				{{ form_label(commentForm.note, 'Note' ,{
							'label_attr' : {
								'class' : 'my-2'
							}
						}) 
					}}
				{{ form_widget(commentForm.note, {
							'attr': {
								'class' : 'form-control',
							}
						}) 
					}}
				{{ form_widget(commentForm.send, {
							'attr' : {
								'class' : 'btn btn-secondary w-100 mt-4'
							}
						}) 
					}}
			</div>
			{{ form_end(commentForm) }}
		</div>
	</div>
{% endblock %}
