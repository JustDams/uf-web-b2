{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}
    <h1>Login</h1>
    <div class="container">

        {% if error %}
            <span class="error">{{ error.messageKey }}</span>
        {% endif %}

       <form action="{{ path("login") }}" method="POST">
           <input type="text" name="_username" value="{{ last_username }}" placeholder="Type Username">
           <input type="password" name="_password">
           <button type="submit">Login</button>
       </form>
    </div>
{% endblock %}
