{% extends 'base.html.twig' %}
{% block title %}
	Edit profile
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
	<div class="container">
		<div class="card shadow">
			<div class="card-header">
				Edit Informations
			</div>
			<div class="p-3">
				{{ form_start(userForm) }}
                <div class="form-group">
					{{ form_row(userForm.username, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Username',
                                'value' : user.username,
                            }
                        })}}
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						{{ form_row(userForm.firstname, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Firstname'
                            }
                        })}}
					</div>
					<div class="form-group col-md-6">
						{{ form_row(userForm.lastname, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Lastname'
                            }
                        })}}
					</div>
				</div>
				<div class="form-group">
					{{ form_row(userForm.email, {
                        'attr' : {
                            'class' : 'form-control',
                            'placeholder' : 'example@example.com'
                        }
                    })}}
				</div>
				{# <div class="form_group">
									{{ form_row(userForm.password.first,
				                        {'attr': {
				                            'class': 'form-control mb-3',
				                            'placeholder' : 'Password',
				                        }
				                    })}}
								</div>
								<div class="form_group">
									{{ form_row(userForm.password.second,
				                        {'attr': {
				                            'class': 'form-control mb-3',
				                            'placeholder' : 'Confirm password',
				                        }
				                    })}}
								</div> #}
				<div class="form_group">
					{{ form_row(userForm.balance,
                            {'attr': {
                                'class': 'form-control mb-3',
                            }
                    })}}
				</div>
				<div class="form_group">
					{{ form_label(userForm.birthday) }}
					<div class="d-flex justify-content-sm-between">
						{{ form_widget(userForm.birthday.day,
                            {'attr': {
                                'class': 'form-control mr-1  mb-3',
                                'required': 'false',
                            }
                        })}}
						{{ form_widget(userForm.birthday.month,
                            {'attr': {
                                'class': 'form-control mr-1  mb-3',
                            }
                        })}}
						{{ form_widget(userForm.birthday.year,
                            {'attr': {
                                'class': 'form-control',
                            }
                        })}}
					</div>
				</div>
				{{ form_widget(userForm.register,
                    {'attr': {
                        'class': 'btn btn-secondary w-100',
                    },
                    'label': 'Update',
                })}}
				{{ form_end(userForm) }}
			</div>
		</div>
	</div>
<div class="container" style="margin-top: 20px">
	<div class="card shadow">
		<div class="card-header">
			Edit Comments
		</div>
		<table class="align-middle mb-0 table table-borderless table-striped table-hover">
			<thead>
			<tr>
				<th class="text-center" scope="col">Id</th>
				<th scope="col">Title</th>
				<th class="text-center" scope="col">Content</th>
				<th class="text-center" scope="col">Note</th>
			</tr>
			</thead>
			<tbody>
			{% for c in comments %}
				<tr>
					<td class="text-center text-muted">{{c.id}}</td>
					<td>
						<div class="">
							<div class="">
								<div class="">
									<div class="widget-heading">{{ c.title }}
									</div>
								</div>
							</div>
						</div>
					</td>
					<td class="">{{ c.content }}</td>
					<td class="text-center">
						<div class="badge badge-warning">{{ c.note }}/5</div>
					</td>
					<td class="text-center">
						<a href="{{path('removeComment', {'id' : c.id})}}" class="mx-2"><i class="fas fa-trash"></i></a>
						<a href="{{path('editComment', {'id' : c.id})}}"><i class="fas fa-pencil-alt"></i></a>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}
